<?xml version="1.0" encoding="UTF-8"?>

<?import com.lynden.gmapsfx.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" styleClass="root" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FXMLExampleController">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25" />
    </padding>
    <AnchorPane GridPane.columnIndex="0" GridPane.rowIndex="1">
        <children>
            <ListView fx:id="listViewNames" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
        </children>
    </AnchorPane>
    <AnchorPane prefHeight="400.0" prefWidth="400.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <children>
            <GoogleMapView fx:id="mapView" />
            <VBox alignment="TOP_CENTER" fillWidth="false" layoutX="0.0" layoutY="0.0" spacing="10.0" styleClass="panel-background" stylesheets="@Styles.css" BorderPane.alignment="CENTER">
            </VBox>
        </children>
    </AnchorPane>
    <HBox alignment="TOP_LEFT" prefHeight="46.0" prefWidth="274.0" spacing="10" GridPane.columnSpan="1" GridPane.rowIndex="0">
      <TextField fx:id="searchTextBox" promptText="Hae"  onKeyReleased="#handleSearchBar" />
        <Button onAction="#handleEsimButtonAction" text="Esimerkki" visible="false"/>
    </HBox>
    <stylesheets>
        <URL value="@Styles.css" />
    </stylesheets>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>

</GridPane>
