<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane alignment="center" hgap="10" styleClass="root" vgap="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.FXMLExampleController">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25" />
    </padding>
    <AnchorPane GridPane.columnIndex="0" GridPane.rowIndex="1">
        <children>
            <ListView fx:id="listViewNames" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
        </children>
    </AnchorPane>
    <AnchorPane fx:id="mapContainer" prefHeight="400.0" prefWidth="400.0" GridPane.columnIndex="1" GridPane.rowIndex="1">

        <children>
            <VBox alignment="TOP_CENTER" fillWidth="false" layoutX="0.0" layoutY="0.0" spacing="10.0" styleClass="panel-background" stylesheets="@Styles.css" BorderPane.alignment="CENTER">
            </VBox>
        </children>
    </AnchorPane>
    <HBox alignment="TOP_RIGHT" prefHeight="46.0" prefWidth="274.0" spacing="10" GridPane.columnSpan="1" GridPane.rowIndex="0">
        <TextField fx:id="searchTextBox" onKeyReleased="#handleSearchBar" promptText="Hae" />
        <Button onAction="#handleEsimButtonAction" text="Esimerkki" />
    </HBox>
    <CheckBox fx:id="checkBox" mnemonicParsing="false" onAction="#handleCheckbox" text="Searching for address?" GridPane.columnIndex="1" />
    <stylesheets>
        <URL value="@Styles.css" />
    </stylesheets>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>

</GridPane>
