<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" styleClass="root" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MapController">
    <AnchorPane GridPane.columnIndex="0" GridPane.rowIndex="1">
        <children>
            <ListView fx:id="listViewNames" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
        </children>
    </AnchorPane>
    <AnchorPane fx:id="mapContainer" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <HBox alignment="TOP_RIGHT" spacing="10" GridPane.columnSpan="1" GridPane.rowIndex="0">
        <TextField fx:id="searchTextBox" onKeyReleased="#handleSearchBar" promptText="Hae" HBox.hgrow="ALWAYS" />
    </HBox>
    <CheckBox fx:id="checkBox" mnemonicParsing="false" onAction="#handleCheckbox" text="Searching for address?" GridPane.columnIndex="1" />
    <stylesheets>
        <URL value="@Styles.css" />
    </stylesheets>
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints fillHeight="false" vgrow="NEVER" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>

</GridPane>
