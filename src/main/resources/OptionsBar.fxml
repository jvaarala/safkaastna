<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ToolBar?>

<ToolBar fx:id="optionsbarContainer" styleClass="optionsbarContainer" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.OptionsBarController">
    <items>
        <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#Refresh" text="" />
        <Button fx:id="helpButton" mnemonicParsing="false" onAction="#Help" text="" />
        <Button mnemonicParsing="false" onAction="#changeFI" text="FI" />
        <Button mnemonicParsing="false" onAction="#changeSWE" text="SV" />
        <Button mnemonicParsing="false" onAction="#changeENG" text="ENG" />
        <ComboBox id="loca" onMouseClicked="#mapLocation" prefHeight="39.0" prefWidth="150.0" value="Helsinki">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Helsinki" />
                    <String fx:value="Oulu" />
                    <String fx:value="Tampere" />
                </FXCollections>
            </items>
        </ComboBox>
    </items>
</ToolBar>
